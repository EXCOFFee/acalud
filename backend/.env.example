# ============================================================================
# VARIABLES DE ENTORNO - ACALUD BACKEND
# ============================================================================
# Archivo de configuración para variables de entorno
# IMPORTANTE: Copiar a .env y cambiar valores para producción

# Configuración de la aplicación
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:5173

# Configuración JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production-with-at-least-32-characters
JWT_EXPIRES_IN=7d

# Configuración de base de datos PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=password
DB_NAME=acalud_db

# Configuración de Redis (para cache y sesiones)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Configuración de almacenamiento de archivos
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# Configuración de email (para notificaciones)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@acalud.com

# Configuración de logs
LOG_LEVEL=debug

# URLs de servicios externos
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Configuración de rate limiting
THROTTLE_TTL=60000
THROTTLE_LIMIT=100

# Configuración de CORS
CORS_ORIGIN=http://localhost:5173

# Configuración de monitoreo
SENTRY_DSN=
ANALYTICS_ID=
